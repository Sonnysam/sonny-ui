    "react-native-safe-area-context": "^5.4.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "react": "^19.0.0",
    "react-native": "^0.79.3",
    "typescript": "^5.8.3",
    "expo": "^53.0.0",
