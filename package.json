{
  "name": "sonny-ui",
  "version": "0.2.2",
  "description": "A collection of reusable React Native components optimized for Expo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sonny-ui": "bin/sonny-ui"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
